<hibernate-mapping>
    <class name="ru.job4j.item.Item" table="items">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="desc" column="description"/>
        <property name="created" column="create_date"/>
        <property name="done" column="done"/>
    </class>
</hibernate-mapping>